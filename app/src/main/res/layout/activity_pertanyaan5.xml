<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="benniner.iak.project.afinal.mu.Pertanyaan5Activity">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/f" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is the fastest goalscorer for United in a match?"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <RadioButton
        android:id="@+id/radioButton14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="44dp"
        android:text="38 "
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <RadioButton
        android:id="@+id/radioButton15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:text="20"
        android:layout_alignBaseline="@+id/radioButton14"
        android:layout_alignBottom="@+id/radioButton14"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <RadioButton
        android:id="@+id/radioButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioButton14"
        android:layout_alignRight="@+id/radioButton14"
        android:layout_below="@+id/radioButton14"
        android:layout_marginTop="18dp"
        android:text="33" />

    <RadioButton
        android:id="@+id/radioButton17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioButton15"
        android:layout_alignRight="@+id/radioButton15"
        android:layout_alignTop="@+id/radioButton16"
        android:text="48" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#7FFFFF"
        android:text="Next" />

</RelativeLayout>
